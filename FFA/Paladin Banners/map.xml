<?xml version="1.0"?>
<map proto="1.4.0">
<name>Paladin Banners</name>
<version>1.6</version>
<objective>Get the most points, by killing or controlling banners!</objective>
<phase>development</phase>
<authors>
    <author uuid="2ca8072f-74be-4798-85b8-bbce03aa91af"/> <!-- Tywnis -->
</authors>
<rules>
    <rule>Creating alliances with other players is allowed.</rule>
</rules>
<score>
   <kills>1</kills>
   <deaths>1</deaths>
   <limit>150</limit>
</score>
<players min="2" max="15" max-overfill="20" show-name-tags="true"/>

<flags>
    <post id="post" return-time="5s">
        <block>1159.5,11,-1369.5</block>
    </post>
    <post id="post1" return-time="5s">
        <block>1148.5,11,-1380.5</block>
    </post>
    <post id="post2" return-time="5s">
        <block>1159.5,11,-1391.5</block>
    </post>
    <post id="post3" return-time="5s">
        <block>1170.5,11,-1380.5</block>
    </post>
    <flag name="Yellow Flag" id="Yflag" shared="true" post="post" points-rate="0.3"/>
    <flag name="Blue Flag" id="Bflag" shared="true" post="post1" points-rate="0.3"/>
    <flag name="Red Flag" id="Rflag" shared="true" post="post2" points-rate="0.3"/>
    <flag name="Green Flag" id="Gflag" shared="true" post="post3" points-rate="0.3"/>
</flags>

<spawns safe="true">
    <spawn kit="spawn">
        <regions>
            <cylinder base="1159.5,3,-1380.5" radius="53" height="40"/>
        </regions>
    </spawn>
    <default kit="obs" yaw="90">
        <regions>
            <point>1165.5,89,-1380.5</point>
        </regions>
    </default>
</spawns>
<kits>
    <kit id="obs">
        <potion duration="oo">night vision</potion>
    </kit>
    <kit id="spawn">
        <item slot="0" unbreakable="true">stone sword</item>
        <item slot="1" unbreakable="true">bow</item>
        <item slot="2" unbreakable="true">shears</item>
        <item slot="4" damage="8" amount="16">wool</item>
        <item slot="6" amount="2">golden apple</item>
        <item slot="7" amount="32">cooked beef</item>
        <item slot="8" amount="12">arrow</item>
        <helmet color="FFFFFF" unbreakable="true">leather helmet</helmet>
        <chestplate color="FFFFFF" unbreakable="true">leather chestplate</chestplate>
        <leggings color="FFFFFF" unbreakable="true">leather leggings</leggings>
        <boots color="FFFFFF" unbreakable="true" enchantment="protection fall:2">leather boots</boots>
        <potion duration="5" amplifier="2">heal</potion>
        <potion duration="5" amplifier="5">damage resistance</potion>
        <potion duration="oo">night vision</potion>
        <potion duration="oo" amplifier="1">speed</potion>
    </kit>
    <kit id="observers">
        <potion duration="oo" amplifier="2">speed</potion>
    </kit>
    <kit id="tier 0" force="true" locked="true">
        <potion duration="5" amplifier="2">speed</potion>
        <potion duration="3" amplifier="2">heal</potion>
    </kit>
    <kit id="tier 1" force="true" locked="true">
        <item slot="0" attributes="generic.attackDamage:add:5.0;generic.knockbackResistance:add:0.25">stone sword</item>
        <leggings unbreakable="true">gold leggings</leggings>
        <potion duration="5" amplifier="1">speed</potion>
    </kit>
    <kit id="tier 2" force="true" locked="true">
        <item slot="0" attributes="generic.attackDamage:add:5.10;generic.knockbackResistance:add:0.25">stone sword</item>
        <leggings unbreakable="true">chainmail leggings</leggings>
        <potion duration="5" amplifier="1">speed</potion>
    </kit>
    <kit id="tier 3" force="true" locked="true">
        <item slot="0" attributes="generic.attackDamage:add:5.15;generic.knockbackResistance:add:0.25">stone sword</item>
        <leggings unbreakable="true">iron leggings</leggings>
        <potion duration="5" amplifier="1">speed</potion>
    </kit>
    <kit id="tier 4" force="true" locked="true">
        <item slot="0" attributes="generic.attackDamage:add:5.25;generic.knockbackResistance:add:0.25">stone sword</item>
        <item slot="1" unbreakable="true" enchantment="arrow damage:1">bow</item>
        <boots unbreakable="true">iron boots</boots>
        <potion duration="5" amplifier="1">speed</potion>
    </kit>
    <kit id="tier 5" force="true" locked="true">
        <item slot="0" attributes="generic.attackDamage:add:5.35;generic.knockbackResistance:add:0.25">stone sword</item>
        <item slot="1" unbreakable="true" enchantment="arrow damage:1">bow</item>
        <boots color="FFFFFF" unbreakable="true">leather boots</boots>
        <chestplate unbreakable="true">gold chestplate</chestplate>
        <potion duration="5" amplifier="1">speed</potion>
    </kit>
    <kit id="tier 6" force="true" locked="true">
        <item slot="0" attributes="generic.attackDamage:add:5.45;generic.knockbackResistance:add:0.25">stone sword</item>
        <item slot="1" unbreakable="true" enchantment="arrow damage:1">bow</item>
        <boots unbreakable="true">iron boots</boots>
        <potion duration="5" amplifier="1">speed</potion>
    </kit>
    <kit id="tier 7" force="true" locked="true">
        <item slot="0" attributes="generic.attackDamage:add:5.60;generic.knockbackResistance:add:0.25">stone sword</item>
        <item slot="1" unbreakable="true" enchantment="arrow damage:1">bow</item>
        <chestplate unbreakable="true">iron chestplate</chestplate>
        <potion duration="5" amplifier="1">speed</potion>
    </kit>
    <kit id="tier 8" force="true" locked="true">
        <item slot="0" attributes="generic.attackDamage:add:5.75;generic.knockbackResistance:add:0.25">stone sword</item>
        <item slot="1" unbreakable="true" enchantment="arrow damage:1">bow</item>
        <boots unbreakable="true">diamond boots</boots>
        <potion duration="5" amplifier="1">speed</potion>
    </kit>
</kits>
<!-- Normal rewards, every kill -->
<killreward>
    <item amount="4">arrow</item>
    <item>golden apple</item>
