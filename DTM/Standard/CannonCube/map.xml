    <item>diamond pickaxe</item>
    <item>workbench</item>
    <item>dispenser</item>
    <item>shears</item>
    <item>wood sword</item>
    <item>bow</item>
    <item>arrow</item>
    <item>vine</item>
    <item>stained clay</item>
    <item>stained glass</item>
    <item>nether fence</item>
