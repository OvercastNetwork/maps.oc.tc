<?xml version="1.0"?>
<map proto="1.3.6">
<name>Radiant Castles: Rage</name>
<version>1.0.1</version>
<objective>Eliminate the opposing team!</objective>
<gamemode>rage</gamemode>
<authors>
    <author uuid="ff0b4c92-edc5-4474-a145-04a433c9e485"/> <!-- MySquishyTurtle -->
    <author uuid="8f9344cf-7367-4e28-9f24-5c66422f28c9"/> <!-- Timothee38 -->
</authors>
<teams>
   <team id="red" color="dark red" max="16" max-overfill="20">Red</team>
   <team id="blue" color="blue" max="16" max-overfill="20">Blue</team>
</teams>
<blitz>
    <time>6m</time>
    <lives>1</lives>
    <broadcastLives>true</broadcastLives>
    <title>Blitz: Rage</title>
</blitz>
<rage/>
<spawns>
    <spawn team="red" kit="red">
        <regions yaw="0">
            <block>256.5,16,-200.5</block>
        </regions>
    </spawn>
    <spawn team="blue" kit="blue">
        <regions yaw="180">
            <block>142.5,16,-200.5</block>
        </regions>
    </spawn>
    <default>
        <regions yaw="0">
            <cuboid min="200,45,-199" max="198,45,-201"/>
        </regions>
    </default>
</spawns>
<kits>
    <kit name="spawn">
        <item slot="0" enchantment="damage all:10">iron sword</item>
        <item slot="1" enchantment="arrow damage:10">bow</item>
        <item slot="2">golden apple</item>
        <item slot="3" amount="1">arrow</item>
        <!--  Potion of instant health II  -->
        <potion duration="2" amplifier="1">heal</potion>
        <potion duration="5">damage resistance</potion>
        <chestplate unbreakable="true" locked="true">gold chestplate</chestplate>
    </kit>
    <kit name="red" parents="spawn">
        <helmet color="993333" unbreakable="true" locked="true">leather helmet</helmet>
        <leggings color="993333" unbreakable="true" locked="true">leather leggings</leggings>
        <boots color="993333" unbreakable="true" locked="true">leather boots</boots>
    </kit>
    <kit name="blue" parents="spawn">
        <helmet color="334CB2" unbreakable="true" locked="true">leather helmet</helmet>
        <leggings color="334CB2" unbreakable="true" locked="true">leather leggings</leggings>
        <boots color="334CB2" unbreakable="true" locked="true">leather boots</boots>
    </kit>
</kits>
<killreward>
    <item>golden apple</item>
    <item>arrow</item>
</killreward>
<regions>
    <apply block="deny-all">
        <rectangle min="-oo,-oo" max="oo,oo"/>
    </apply>
</regions>
<toolrepair>
    <tool>bow</tool>
    <tool>iron sword</tool>
</toolrepair>
<itemremove>
    <item>arrow</item>
    <item>leather helmet</item>
    <item>gold chestplate</item>
    <item>leather leggings</item>
    <item>leather boots</item>
    <item>golden apple</item>
    <item>golden carrot</item>
</itemremove>
</map>
