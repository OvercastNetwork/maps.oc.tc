<?xml version="1.0"?>
<map proto="1.3.5">
<include src="blitz-global.xml" />
<name>Forsaken Fort</name>
<version>1.1.0</version>
<objective>Eliminate the other team within 6 minutes! Remember, you don't regenerate health!</objective>
<gamemode>blitz</gamemode>
<authors>
    <author uuid="f690a591-348b-482e-a18d-7779d0c0a28c"/> <!-- minimitch0199 -->
</authors>
<contributors>
    <contributor uuid="2fa5be16-4308-4ec1-ace5-b92565d5c6c5" contribution="Name suggestions"/> <!-- HuskeMutt -->
</contributors>
<blitz>
    <time>6m</time>
    <lives>1</lives>
    <broadcastLives>false</broadcastLives>
    <title>Blitz: UHC</title>
</blitz>
<teams>
    <team color="dark red" max="8" max-overfill="12">Red</team>
    <team color="blue" max="8" max-overfill="12">Blue</team>
</teams>
<spawns>
    <spawn team="red" kit="red" yaw="-90">
        <block>-11.5,52.5,75.5</block>
    </spawn>
    <spawn team="blue" kit="blue" yaw="90">
        <block>11.5,52.5,-8.5</block>
    </spawn>
    <default yaw="-180">
        <block>0,65.5,0</block>
    </default>
</spawns>
<kits>
    <kit name="spawn" force="true">
        <item slot="0" unbreakable="true">stone sword</item>
        <item slot="1" unbreakable="true">bow</item>
        <item slot="2" amount="16">arrow</item>
        <item slot="8">golden apple</item>
        <chestplate unbreakable="true">gold chestplate</chestplate>
        <boots unbreakable="true">iron boots</boots>
    </kit>
    <kit name="red" parents="spawn">
        <helmet color="FF0000" unbreakable="true">leather helmet</helmet>
    </kit>
    <kit name="blue" parents="spawn">
        <helmet color="0000FF" unbreakable="true">leather helmet</helmet>
    </kit>
</kits>
<killreward>
    <item>golden apple</item>
    <item amount="8">arrow</item>
</killreward>
<regions>
    <apply block="deny-blocks">
        <rectangle min="-oo,-oo" max="oo,oo"/>
    </apply>
</regions>
<gamerules>
    <doDaylightCycle>false</doDaylightCycle>
    <naturalRegeneration>false</naturalRegeneration>
</gamerules>
<hunger>
    <depletion>off</depletion>
</hunger>
<itemremove>
    <item>stone sword</item>
    <item>bow</item>
    <item>gold chestplate</item>
    <item>leather helmet</item>
    <item>iron boots</item>
    <item>golden apple</item>
</itemremove>
</map>
