    <spawns kit="red">
        <!-- red spawns -->
        <spawn team="red" yaw="0">
            <cuboid min="-107,90,-21" max="-110,90,-25"/>
            <cylinder base="-99,63,-73" radius="3" height="0"/>
            <cuboid min="-92,37,25" max="-88,37,30"/>
        </spawn>
        <spawn team="red" yaw="90">
            <cylinder base="-91,76,-72.5" radius="1" height="0"/>
