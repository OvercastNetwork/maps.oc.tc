    <item>leather chestplate</item>
    <item>leather leggings</item>
    <item>leather boots</item>
    <item>arrow</item>
    <item>ladder</item>
    <item>cooked chicken</item>
    <item>ink sack</item>
    <item>glass bottle</item>
    <item>potion:0</item><!-- Remove water bottles -->
</itemremove>
<killreward>
